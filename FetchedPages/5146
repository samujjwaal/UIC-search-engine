          role="region">

          <div class="component-accordion__content-wrapper">
            <div class="components">

  
    
      

<div class="component  component--is-in-another-component">

  
  <div class="component-text-block">
  
    <div class="component-description">
                    <h2 id="references" class="__title invisible">REFERENCES</h2>
                    </div>

  
  <p>21 CFR 56.108(a)-(a)(2), 21 CFR 56.109, (f), 21 CFR 56.111<br />
45 CFR 46.108(a)(3)-(3)(ii), 45 CFR 46.109(e)-(f)(1)(iii)(B), 45 CFR 46.111<br />
